# Configurações do Sistema SaaS Sisteminha
# Autor: Dante Testa <https://dantetesta.com.br>
# Versão: 2.1.0

# ============================================
# BANCO DE DADOS
# ============================================
DB_HOST=localhost
DB_USER=seu_usuario
DB_PASS=sua_senha
DB_NAME=seu_banco
DB_CHARSET=utf8mb4

# ============================================
# AMBIENTE
# ============================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://seudominio.com.br

# ============================================
# SEGURANÇA
# ============================================
APP_KEY=sua_chave_secreta_de_32_caracteres
CSRF_SECRET=sua_chave_csrf_secreta

# ============================================
# PAGOU API
# ============================================
PAGOU_API_KEY=sua_api_key_pagou
PAGOU_ENVIRONMENT=production

# ============================================
# POSTMARK EMAIL
# ============================================
POSTMARK_SERVER_TOKEN=seu_server_token
POSTMARK_ACCOUNT_TOKEN=seu_account_token

# ============================================
# CLOUDFLARE TURNSTILE
# ============================================
TURNSTILE_SITE_KEY=sua_site_key
TURNSTILE_SECRET_KEY=sua_secret_key

# ============================================
# MONITORAMENTO
# ============================================
ALERT_EMAIL=admin@seudominio.com.br
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# ============================================
# BACKUP
# ============================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
AWS_S3_BUCKET=seu-bucket-backup
AWS_ACCESS_KEY=sua_access_key
AWS_SECRET_KEY=sua_secret_key
